<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-cards-view" author="Eugene">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="cardsView"/>
            </not>
        </preConditions>
        <createView viewName="cardsView" replaceIfExists="true">
            SELECT id, '****' || RIGHT(card_number, 4) AS card_number, validity_period, status, unique_key
            FROM cards
        </createView>
    </changeSet>

</databaseChangeLog>